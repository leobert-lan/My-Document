<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/gray_ed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white" >

        <CheckBox
            android:id="@+id/trans_on_item_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@android:color/transparent"
            android:button="@drawable/cloudbox_list_toggle_check" />

        <CheckBox
            android:id="@+id/trans_on_item_multiselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@android:color/transparent"
            android:button="@drawable/switch_multiselect"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/trans_on_item_clicksection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/trans_on_item_toggle"
            android:layout_toRightOf="@+id/trans_on_item_multiselect"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/trans_on_item_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/unknow108" />

            <TextView
                android:id="@+id/trans_on_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/trans_on_item_icon"
                android:layout_toRightOf="@+id/trans_on_item_icon"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray_333"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trans_on_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/trans_on_item_icon"
                android:layout_toRightOf="@+id/trans_on_item_icon"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:src="@color/gray_ed" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/trans_on_item_ll_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f2"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/trans_on_item_control"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/trans_on_item_img_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/fenx" />

            <TextView
                android:id="@+id/trans_on_item_text_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:text="@string/string_share"
                android:textColor="@color/blue"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trans_on_item_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/shanc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:text="@string/trans_control_delete"
                android:textColor="@color/blue"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/gray_ed" />

</LinearLayout>
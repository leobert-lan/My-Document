<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="200"
    android:background="@drawable/yy"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bigblue_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yy" />

    <LinearLayout
        android:id="@+id/linear_Super_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="115dp" >

        <LinearLayout
            android:id="@+id/linear_super_center_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/shangctp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="@string/super_center_picture"
                android:textColor="@color/gray_333" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_super_center_vedio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/shangcsp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="@string/super_center_vedio"
                android:textColor="@color/gray_333" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_super_center_folder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/xinjwjj" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="@string/super_center_folder"
                android:textColor="@color/gray_333" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
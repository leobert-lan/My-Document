<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical" >
    
     <CheckBox
        android:id="@+id/searchuserlist_choose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_marginLeft="3dp"
        android:background="@android:color/transparent"
        android:button="@drawable/switch_multiselect_nullatfalse" />
    
    <RelativeLayout 
        android:id="@+id/searchuserlist_clicksection"
        android:layout_toLeftOf="@+id/searchuserlist_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <com.lht.pan_android.view.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/searchuserlist_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/mortx"
        imagecontrol:border_inside_color="@color/gray_999"
        imagecontrol:border_innerthickness="1px" />

   

    <TextView
        android:id="@+id/searchuserlist_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/searchuserlist_username"
        android:layout_toRightOf="@+id/searchuserlist_head"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:maxEms="8"
        android:textSize="12sp"
        android:padding="5dp"
        android:textColor="@color/gray_333" />

    <TextView
        android:id="@+id/searchuserlist_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:minEms="5"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@color/gray_777" />
        
    </RelativeLayout>


   


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_conner_2dp_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:textSize="18sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/dialog3_content_containner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog3_title"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/dialog3_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/h1_text_gray_content"
            android:textSize="15sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/dialog3_negativebtn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bgselector_gray"
            android:textColor="@color/bg_white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dialog3_middlebtn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/bg_white"
            android:background="@drawable/bgselector_conner2dp_blue"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dialog3_positivebtn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/bg_white"
            android:background="@drawable/bgselector_conner2dp_blue"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog3_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog3_content_containner"
        android:src="@color/h6_divider" />

</RelativeLayout>
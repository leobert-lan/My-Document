<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/primary_background"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bindlabel_btn_submit"
        style="@style/style_button.blue"
        android:layout_marginBottom="15dp"
        android:text="@string/v1010_default_bindlabel_btn_submit" />

    <TextView
        android:id="@+id/bindlabel_tv_skip"
        style="@style/style_textview"
        android:layout_gravity="right"
        android:paddingBottom="20dp"
        android:text="@string/v1010_default_bindlabel_text_skip"
        android:textColor="@color/h3_text_gray_hint" />

</LinearLayout>

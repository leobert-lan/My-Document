<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context="com.lht.cloudjob.activity.others.SplashActivity">

    <ImageView
        android:id="@+id/splash_iv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/v1011_drawable_splash_logo"/>

    <TextView
        android:id="@+id/splash_tv_name"
        style="@style/style_textview"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:text="@string/app_name"
        android:textColor="@color/main_blue_dark"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar_grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/fgmine_icon_topmargin"
    android:paddingRight="@dimen/fgmine_icon_topmargin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/iv_toast_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/list_item_padding_10dp"
        android:src="@drawable/v1011_drawable_success_toast" />

    <TextView
        android:id="@+id/tv_toast_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_toast_image"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/text_padding_5dp"
        android:text="保存成功"
        android:textColor="@color/text_white" />

</RelativeLayout>
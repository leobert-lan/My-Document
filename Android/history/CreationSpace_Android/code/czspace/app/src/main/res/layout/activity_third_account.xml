<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_third_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context=".module.user.info.ui.ac.ThirdAccountActivity">

    <include
        android:id="@+id/include"
        layout="@layout/view_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/content_topmargin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/thirdaccount_ll_bindwechat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/v1000_drawable_weix2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="@string/wechat"
                android:textSize="@dimen/fs_content" />

            <TextView
                android:id="@+id/thirdaccount_tv_bindwechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/main_green_dark"
                android:textSize="@dimen/fs_content" />

        </LinearLayout>

        <include layout="@layout/line_gray_1dp" />

        <LinearLayout
            android:id="@+id/thirdaccount_ll_bindweibo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/v1000_drawable_weib2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="@string/sinaweibo"
                android:textSize="@dimen/fs_content" />

            <TextView
                android:id="@+id/thirdaccount_tv_bindweibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/main_green_dark"
                android:textSize="@dimen/fs_content" />

        </LinearLayout>

        <include layout="@layout/line_gray_1dp" />

        <LinearLayout
            android:id="@+id/thirdaccount_ll_bindqq"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/v1000_drawable_qq2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:text="@string/QQ"
                android:textSize="@dimen/fs_content" />

            <TextView
                android:id="@+id/thirdaccount_tv_bindqq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/main_green_dark"
                android:textSize="@dimen/fs_content" />

        </LinearLayout>

        <include layout="@layout/line_gray_1dp" />
    </LinearLayout>

    <!--<include layout="@layout/bar_title_simple" />-->
    <include layout="@layout/toolbar_title_theme1" />
</RelativeLayout>

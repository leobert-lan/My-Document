<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/previewpager_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/previewpager_item_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/previewpager_item_img_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/v1011_drawable_preview_img_fail"
        android:layout_marginTop="240dp"/>

    <TextView
        android:id="@+id/previewpager_item_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_gray_content"
        android:textSize="@dimen/fs_content"
        android:layout_below="@+id/previewpager_item_img_error"
        android:text="@string/v1011_default_img_preview_failure"
        android:paddingTop="13dp" />
</RelativeLayout>
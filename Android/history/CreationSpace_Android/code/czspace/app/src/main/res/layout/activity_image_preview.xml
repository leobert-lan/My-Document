<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.pub.ui.ImagePreviewActivity">

    <FrameLayout
        android:id="@+id/image_preview_title_shade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_shade">

        <include layout="@layout/toolbar_title_theme2" />

    </FrameLayout>

    <include
        layout="@layout/view_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.lht.creationspace.customview.PhotoViewPager
        android:id="@+id/imgpv_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>
